# MTP Photography Website - Environment Configuration
# Copy this file to .env.local and update with your specific settings

# Database Connection (MySQL)
# Local development with Docker
DATABASE_URL="mysql://mtp_user:mtp_password@localhost:3306/mtp_photography"

# AWS S3 Configuration for image storage
AWS_ACCESS_KEY_ID="your_access_key_id"
AWS_SECRET_ACCESS_KEY="your_secret_access_key"
AWS_REGION="us-west-2"
AWS_S3_BUCKET="mtp-photography-assets"

# Authentication
JWT_SECRET="change-this-to-a-secure-random-string-in-production"
JWT_EXPIRES_IN="7d"  # 7 days

# Environment
NODE_ENV="development" # Change to "production" for production deployment

# API Rate Limiting
RATE_LIMIT_MAX="60" # Maximum requests per minute
RATE_LIMIT_WINDOW="60000" # Time window in milliseconds (1 minute)

# Database Configuration
# Copy this file to .env.local and update with your actual database credentials

# Choose database provider: "mysql" for production, "sqlite" for development
DATABASE_PROVIDER="mysql"

# Database connection URL
# - For MySQL: mysql://USER:PASSWORD@HOST:PORT/DATABASE
# - For SQLite: file:./dev.db
DATABASE_URL="mysql://username:password@localhost:3306/mtp_photography"

# AWS S3 Configuration for image storage
AWS_ACCESS_KEY_ID="your_access_key_id"
AWS_SECRET_ACCESS_KEY="your_secret_access_key"
AWS_REGION="us-west-2"
AWS_S3_BUCKET="mtp-photography-assets"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"  # 7 days

# Environment
NODE_ENV="development" # Change to "production" for production deployment
